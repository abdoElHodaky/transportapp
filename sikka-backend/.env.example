# üåç Sikka Transportation Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# üè∑Ô∏è Application Environment
NODE_ENV=development
PORT=3000
APP_NAME=Sikka Transportation Platform
APP_VERSION=1.0.0

# üóÑÔ∏è Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=sikka_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=sikka_db
DATABASE_SSL=false
DATABASE_LOGGING=false
DATABASE_SYNCHRONIZE=false
DATABASE_MIGRATIONS_RUN=true

# ‚ö° Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# üîê JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# üì± SMS Configuration (OTP)
SMS_PROVIDER=local
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=Sikka

# üí≥ Payment Gateway Configuration
# EBS (Electronic Banking Services)
EBS_BASE_URL=https://api.ebs.sd
EBS_MERCHANT_ID=your_ebs_merchant_id
EBS_SECRET_KEY=your_ebs_secret_key
EBS_WEBHOOK_SECRET=your_ebs_webhook_secret

# CyberPay
CYBERPAY_BASE_URL=https://api.cyberpay.sd
CYBERPAY_MERCHANT_ID=your_cyberpay_merchant_id
CYBERPAY_API_KEY=your_cyberpay_api_key
CYBERPAY_WEBHOOK_SECRET=your_cyberpay_webhook_secret

# üó∫Ô∏è Maps & Location Services
MAPS_API_KEY=your_google_maps_api_key
MAPS_PROVIDER=google

# üìß Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@sikka.sd

# üîî Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_firebase_project_id
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.sikka.app

# üìä Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_PROVIDER=mixpanel
ANALYTICS_TOKEN=your_analytics_token

# üîç Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# üõ°Ô∏è Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# üîÑ Background Jobs
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# üìà Performance Configuration
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=60000
CACHE_TTL=300
API_TIMEOUT=30000

# üåç Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar
DEFAULT_CURRENCY=SDG
DEFAULT_TIMEZONE=Africa/Khartoum

# üè• Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true

# üîß Development Tools
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
DEBUG_MODE=false
PROFILING_ENABLED=false

