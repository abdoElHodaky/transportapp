# ğŸ—ï¸ Multi-stage build for production optimization
FROM node:18-alpine AS builder

# ğŸ“¦ Install build dependencies
RUN apk add --no-cache python3 make g++

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“‹ Copy package files for dependency installation
COPY package*.json ./
COPY tsconfig*.json ./

# ğŸ“š Install ALL dependencies (including devDependencies for build)
RUN npm ci && npm cache clean --force

# ğŸ“„ Copy source code
COPY src/ ./src/

# ğŸ—ï¸ Build the application
RUN npm run build

# ğŸ§¹ Remove devDependencies after build
RUN npm prune --production

# ğŸš€ Production stage
FROM node:18-alpine AS production

# ğŸ”§ Install system dependencies
RUN apk add --no-cache \
    dumb-init \
    curl \
    && rm -rf /var/cache/apk/*

# ğŸ‘¤ Create app user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nestjs -u 1001 -G nodejs

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“‹ Copy package files
COPY package*.json ./

# ğŸ“š Copy production dependencies from builder
COPY --from=builder --chown=nestjs:nodejs /app/node_modules ./node_modules

# ğŸ—ï¸ Copy built application from builder stage
COPY --from=builder --chown=nestjs:nodejs /app/dist ./dist

# ğŸ“„ Copy configuration files
COPY --chown=nestjs:nodejs .env.example ./.env.example

# ğŸ·ï¸ Add labels for better container management
LABEL maintainer="Sikka Transportation Platform" \
      version="1.0.0" \
      description="Sikka Backend API Server" \
      org.opencontainers.image.source="https://github.com/abdoElHodaky/transportapp"

# ğŸ‘¤ Switch to non-root user for security
USER nestjs

# ğŸŒ Expose application port
EXPOSE 3000

# ğŸ¥ Health check for container orchestration
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# ğŸ”§ Use dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]

# ğŸš€ Start the application
CMD ["node", "dist/main.js"]
